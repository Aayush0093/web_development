var limit = 140;
var sentence = prompt("Enter sentence");
alert("You have written "+sentence.length+" and you are left with "
     +(limit-sentence.length)+" characters.");


var limit = 140;
var sentence = prompt("Enter sentence");
alert("You have written "+sentence.length+" and you are left with "
     +(limit-sentence.length)+" characters.");
alert(sentence.slice(0,140));


var name = prompt("Enter your name");
alert(name.slice(0,1).toUpperCase()+name.slice(1,name.length).toLowerCase());